<%= render 'navbar'%>
<%= render 'noticeAlert'%>

<div class = "container">
	<div class = "row" align="right">
		<%= button_tag 'Add', class: "btn btn-primary", data: {toggle: 'modal', target: "#add"}%>
	</div>
	<table class = "table">
		<tr>
			<!--<th>Rank</th>
			<th>Level</th>
			<th>Grade</th>-->
			<th><%= link_to 'Rank', job_levels_path(sortBy: "rank"), class: "btn btn-primary", style: "width:100%"%></th>
			<th><%= link_to 'Level', job_levels_path(sortBy: "level"), class: "btn btn-primary", style: "width:100%"%></th>
			<th><%= link_to 'Grade', job_levels_path(sortBy: "grade"), class: "btn btn-primary", style: "width:100%"%></th>
			<th></th>
			<!--<th></th>-->
		</tr>
		<%@jobLevels.each do |jobLevel|%>
			<tr>
				<td><%= jobLevel.rank%></td>
				<td><%= jobLevel.level%></td>
				<td><%= jobLevel.grade%></td>
				<td><%= button_tag 'Edit', data: {toggle: 'modal', target: "#edit", remote: edit_job_level_path(jobLevel) << "#modal-edit-fields"}, class: "btn btn-primary col-md-5"%>
				<%= button_to 'Delete', job_level_path(jobLevel), method: :delete, onclick: "return confirm('Are you sure you would like to delete Job Level #{jobLevel.rank} - Level: #{jobLevel.level} Grade: #{jobLevel.grade}')", class: "btn btn-primary col-md-5"%></td>
			</tr>
		<%end%>
	</table>

</div>

<div class = "modal fade" id = "add" role = "dialog">
	<div class = "modal-dialog">
		<div class = "modal-content">

			<div class = "modal-header">
				<h4>Add Job Level</h4>
			</div>
			<%= render 'form'%>

		</div>
	</div>
</div>

<div class = "modal fade" id = "edit" role = "dialog">
	<div class = "modal-dialog">
		<div class = "modal-content">	
			
			
		</div>
	</div>
</div>