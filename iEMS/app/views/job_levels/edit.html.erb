<div class = "modal-header">
	<h4>Edit Job Level</h4>
</div>

<div class = "modal-edit-fields">
	<%= form_for @jobLevel, html: {class: "form-horizontal"} do |f|%>
		<div class = "modal-body">
			<div class = "form-group">
				<%= label_tag(:rank, "Rank: ", class: "col-md-2 control-label")%>
				<div class = "col-md-10">
					<%= f.text_field(:rank, class: "form-control") %>
				</div>
			</div>
			<div class = "form-group">
				<%= label_tag(:level, "Level: ", class: "col-md-2 control-label")%>
				<div class = "col-md-10">
					<%= f.text_field(:level, class: "form-control") %>
				</div>
			</div>
			<div class = "form-group">
				<%= label_tag(:grade, "Grade: ", class: "col-md-2 control-label")%>
				<div class = "col-md-10">
					<%= f.text_field(:grade, class: "form-control") %>
				</div>
			</div>
		</div>

		<div class = "modal-footer">
			<%= f.submit 'Save', class: "btn btn-primary"%>
		</div>
	<%end%>

</div>