<%= form_for @business_unit, html: {class: "form-horizontal"} do |f|%>
	<div class = "modal-body">
		<div class = "form-group">
			<%= label_tag(:name, "Name:", class: "col-md-2 control-label")%>
			<div class = "col-md-10">
				<%= f.text_field(:name, class: "form-control")%>
			</div>
		</div>

		<div class = "form-group">
			<%= label_tag(:manager_id, "Manager:", class: "col-md-2 control-label")%>
			<div class = "col-md-10">
				<%= f.text_field(:manager_id, class: "form-control")%>
			</div>
		</div>

		<div class = "form-group">
			<%= label_tag(:supervisor_id, "Supervisor:", class: "col-md-2 control-label")%>
			<div class = "col-md-10">
				<%= f.text_field(:supervisor_id, class: "form-control")%>
			</div>
		</div>

		<div class = "form-group">
			<%= label_tag(:oic, "Officer in charged:", class: "col-md-2 control-label")%>
			<div class = "col-md-10">
				<%= f.text_field(:oic, class: "form-control")%>
			</div>
		</div>

		<div class = "form-group">
			<%= label_tag(:description, "Description:", class: "col-md-2 control-label")%>
			<div class = "col-md-10">
				<%= f.text_area(:description, class: "form-control")%>
			</div>
		</div>
	</div>

	<div class = "modal-footer">
		<%= f.submit 'Save', class: "btn btn-primary"%>
	</div>
<%end%>