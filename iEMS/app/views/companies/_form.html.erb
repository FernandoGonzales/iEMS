<%= form_for @company, html: {class: "form-horizontal"} do |f|%>
	<div class = "modal-body">
		<div class = "form-group">
			<%= label_tag(:name, "Name:", class: "col-md-2 control-label")%>
			<div class = "col-md-10">
				<%= f.text_field(:name, class: "form-control")%>
			</div>
		</div>

		<div class = "form-group">
			<%= label_tag(:add_street, "Street Address:", class: "col-md-2 control-label")%>
			<div class = "col-md-10">
				<%= f.text_field(:add_street, class: "form-control")%>
			</div>
		</div>

		<div class = "form-group">
			<%= label_tag(:add_city, "City:", class: "col-md-2 control-label")%>
			<div class = "col-md-10">
				<%= f.text_field(:add_city, class: "form-control")%>
			</div>
		</div>

		<div class = "form-group">
			<%= label_tag(:add_zip, "Zip Code:", class: "col-md-2 control-label")%>
			<div class = "col-md-10">
				<%= f.text_field(:add_zip, class: "form-control")%>
			</div>
		</div>

		<div class = "form-group">
			<%= label_tag(:num, "Contact Number:", class: "col-md-2 control-label")%>
			<div class = "col-md-10">
				<%= f.text_field(:num, class: "form-control")%>
			</div>
		</div>
	</div>

	<div class = "modal-footer">
		<%= f.submit 'Save', class: "btn btn-primary"%>
	</div>
<%end%>