<div class = "modal-header">
	<h4>Add Leave Request</h4>
</div>
<%= form_for @request, url: leave_requests_path, html: {class: "form-horizontal"} do |f|%>
	<div class = "modal-body">
		<div class = "form-group">
			<%= label_tag(:description, "Reason: ", class: "col-md-2 control-label")%>
			<div class = "col-md-10">
				<%= f.text_field(:description, class: "form-control") %>
			</div>
		</div>
		<%= f.hidden_field :request_type, value: "Leave" %>
		<%= f.hidden_field :status, value: "Pending" %>
		<%= f.fields_for :leave_request do |leave| %>
			<div class = "form-group">
				<%= label_tag(:leave_type, "Leave Type: ", class: "col-md-2 control-label")%>
				<div class = "col-md-10">
					<%= leave.text_field(:leave_type, class: "form-control") %>
				</div>
			</div>
			<div class = "form-group">
				<%= label_tag(:date_start, "Start Date: ", class: "col-md-2 control-label")%>
				<div class = "col-md-10">
					<%= leave.date_select(:date_start, class: "form-control") %>
				</div>
			</div>
			<div class = "form-group">
				<%= label_tag(:date_end, "End Date: ", class: "col-md-2 control-label")%>
				<div class = "col-md-10">
					<%= leave.date_select(:date_end, class: "form-control") %>
				</div>
			</div>
		<% end %>
	</div>
	<div class = "modal-footer">
		<%= f.submit 'Save', class: "btn btn-primary"%>
	</div>
<%end%>