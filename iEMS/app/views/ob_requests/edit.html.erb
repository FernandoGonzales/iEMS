<div class = "modal-header">
	<h4>Edit Official Business Request</h4>
</div>
<%= form_for @request, url: ob_request_path, html: {class: "form-horizontal"} do |f|%>
	<div class = "modal-body">
		<div class = "form-group">
			<%= label_tag(:description, "Description: ", class: "col-md-2 control-label")%>
			<div class = "col-md-10">
				<%= f.text_field(:description, class: "form-control") %>
			</div>
		</div>
		<%= f.hidden_field :request_type, value: "Official Business" %>
		<%= f.hidden_field :status, value: "Pending" %>
		<%= f.fields_for :ob_request do |ob| %>
			<div class = "form-group">
				<%= label_tag(:client, "Client: ", class: "col-md-2 control-label")%>
				<div class = "col-md-10">
					<%= ob.text_field(:client, class: "form-control") %>
				</div>
			</div>
			<div class = "form-group">
				<%= label_tag(:branch, "Branch: ", class: "col-md-2 control-label")%>
				<div class = "col-md-10">
					<%= ob.text_field(:branch, class: "form-control") %>
				</div>
			</div>
			<div class = "form-group">
				<%= label_tag(:datetime_departure, "Departure: ", class: "col-md-2 control-label")%>
				<div class = "col-md-10">
					<%= ob.datetime_select(:datetime_departure, class: "form-control") %>
				</div>
			</div>
			<div class = "form-group">
				<%= label_tag(:datetime_arrival, "Arrival: ", class: "col-md-2 control-label")%>
				<div class = "col-md-10">
					<%= ob.datetime_select(:datetime_arrival, class: "form-control") %>
				</div>
			</div>
		<% end %>
	</div>
	<div class = "modal-footer">
		<%= f.submit 'Save', class: "btn btn-primary"%>
	</div>
<%end%>